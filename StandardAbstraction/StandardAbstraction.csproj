<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Alastair Wyse</Authors>
    <Copyright>Copyright Â© Alastair Wyse 2021</Copyright>
    <Description>Provides wrapper interfaces around .NET Standard classes which interact with the operating system (e.g. classes in the System.IO.File and System.Net.Sockets namespaces).  This allows for mocking of these classes in unit tests.</Description>
    <PackageProjectUrl>https://github.com/alastairwyse/StandardAbstraction/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/alastairwyse/StandardAbstraction/</RepositoryUrl>
    <PackageTags>framework standard abstraction interface operating system os mock mocking unit test tests</PackageTags>
    <PackageReleaseNotes>First version.  Migrated from FrameworkAbstraction project.</PackageReleaseNotes>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>C:\Development\C#\StandardAbstraction\StandardAbstraction\StandardAbstraction.xml</DocumentationFile>
  </PropertyGroup>

</Project>
